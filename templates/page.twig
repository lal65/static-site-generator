<!DOCTYPE html>
<html lang="en">
  {% include '_partials/head.twig' %}
  <body>
  {% include '_partials/body-top.twig' %}
  {% include '_partials/announcements.twig' %}
  {% include '_partials/header.twig' %}
  <div style="height: fit-content;">
    {% for block in blocks['before_content'] %}
      {{ block|raw }}
    {% endfor %}
  </div>
  {% if blocks['sidebar'] %}
    <div id="main-content">
      <main>
        {{ content|raw }}
      </main>
      {% for block in blocks['after_main'] %}
        {{ block|raw }}
      {% endfor %}
      <aside>
        {% for block in blocks['sidebar'] %}
          {{ block|raw }}
        {% endfor %}
      </aside>
    </div>
  {% else %}
    <main id="main-content">
      {{ content|raw }}
      {% for block in blocks['after_main'] %}
        {{ block|raw }}
      {% endfor %}
    </main>
  {% endif %}
  {% include '_partials/body-bottom.twig' %}
  </body>
</html>