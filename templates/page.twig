<!DOCTYPE html>
<html lang="en">
  {% include '_partials/head.twig' %}
  <body>
  {% include '_partials/body-top.twig' %}
  {% include '_partials/announcements.twig' %}
  {% include '_partials/header.twig' %}
  <div style="height: fit-content;margin-bottom:5rem">
    {% for block in blocks['before_content'] %}
      {% autoescape false %}{{ block }}{% endautoescape %}
    {% endfor %}
  </div>
  {% if blocks['sidebar'] %}
    <div style="display:flex;flex-wrap:wrap;">
      <main id="main-content">
        {% apply markdown_to_html %}
          {{ content }}
        {% endapply %}
      </main>
      <aside>
        {% for block in blocks['sidebar'] %}
          {% autoescape false %}{{ block }}{% endautoescape %}
        {% endfor %}
      </aside>
    </div>
  {% else %}
    <main id="main-content">
      {% apply markdown_to_html %}
        {{ content }}
      {% endapply %}
    </main>
  {% endif %}
  {% include '_partials/body-bottom.twig' %}
  </body>
</html>